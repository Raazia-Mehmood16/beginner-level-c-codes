#include <QApplication>
#include <QWidget>
#include <QPushButton>
#include <QLabel>

int main(int argc, char *argv[]) {
    QApplication app(argc, argv);

    // Main window
    QWidget window;
    window.setFixedSize(400, 300);

    // Label for login
    QLabel *label = new QLabel(&window);
    label->setText("Student Management System");
    label->setGeometry(100, 30, 200, 30);

    // Button for Admin login
    QPushButton *adminButton = new QPushButton("Admin", &window);
    adminButton->setGeometry(150, 80, 100, 30);

    // Button for Teacher login
    QPushButton *teacherButton = new QPushButton("Teacher", &window);
    teacherButton->setGeometry(150, 120, 100, 30);

    // Button for Student login
    QPushButton *studentButton = new QPushButton("Student", &window);
    studentButton->setGeometry(150, 160, 100, 30);

    // Show window
    window.show();

    return app.exec();
}
