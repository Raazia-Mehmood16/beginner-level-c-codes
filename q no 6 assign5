#include <iostream>
using namespace std;

int main() {
    const int m = 25;
    const int n = 25;
    int rows, col;
    cout << "Enter the rows: " << endl;
    cin >> rows;
    cout << "Enter the columns: " << endl;
    cin >> col;
    int arr[m][n];
    int spp[m * n];
    int index = 0;
    cout << "Enter Elements of rows: " << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < col; j++) {
            cin >> arr[i][j];
        }
    }
    cout << "Matrix:" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < col; j++) {
            cout << arr[i][j] << " ";
        }
 cout << endl;
    }
    cout << "Spiral Order: ";
    int left = 0, top = 0, right = col - 1, bottom = rows - 1;
    while (top <= bottom && left <= right) {
        for (int i = left; i <= right; i++) {
            spp[index++] = arr[top][i];
            cout << arr[top][i] << " ";
        }
        top++;
        for (int i = top; i <= bottom; i++) {
            spp[index++] = arr[i][right];
            cout << arr[i][right] << " ";
        }
        right--;
        if (top <= bottom) {
            for (int i = right; i >= left; i--) {
                spp[index++] = arr[bottom][i];
                cout << arr[bottom][i] << " ";
            }
            bottom--;
        }
        if (left <= right) {
            for (int i = bottom; i >= top; i--) {
                spp[index++] = arr[i][left];
                cout << arr[i][left] << " ";
            }
            left++;
        }
    }
    cout << endl;

    cout << "Spiral array is: " << endl;
int sum = 0;
    for (int i = 0; i < index; i++) {
        cout << spp[i] << " ";
        sum += spp[i];
    }
    cout << endl;

    cout << "Sum of spiral elements: " << sum << endl;
    int temp[m][n];
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < col; j++)
        {
            for (int l = 0; l < rows - 1 - j; l++)
                if (arr[i][l] > arr[i][l + 1])
                {
                    temp[i][l] = arr[i][l];
                    arr[i][l] = arr[i][l + 1];
                    arr[i][l + 1] = temp[i][l];
                }
        }
    }
    cout << "Modified matrix:" << endl;
    for (int i = 0; i < rows; i++)
    {
        for (int j = 0; j < col; j++)
        {
            cout << arr[i][j] << ",";
        }
        cout << endl;
    }

    return 0;
}